@model UdemyMVC.ViewModels.CourseDetailsVM 

@{
    ViewData["Title"] = "CourseDetailes";
}
<partial name="_InsertedPartial" />
<partial name="_MainPartial" />
<partial name="_IncludePartial" />
<partial name="_ContentPartial">
<partial name="_ReqPartial" />
<partial name="_DescPArtial" />

    <section id="Instructor">
    <div class="container">
        <div class="container mt-4">
            <div class="container row " style="margin-left:60px;width:680px">
                <p class="fw-bolder fs-4">Instructor</p>
                <a href="#" class="fs-5 fw-bold" style="color:#5022c3"> @Model.Instructor</a>
                <div class="d-flex">
                    <div class="p-2" style="padding-top:30px">
                        
                        <img src="/uploads/4d8007c7-6bfb-4e8c-8ef2-a5c1ed5e796c.jpeg" height="100px" width="100px" style="border-radius:50%" alt="Alternate Text" />
                        @* <img src="@Model.InstructorIamge"alt="Alternate Text" /> *@
                    </div>
                    <ul class="course-features" style="font-size:13px; line-height:2">
                        <li class="d-flex align-items-center">
                            <i class="bi bi-star-fill"></i>
                            <p class="mb-0 p-1"> @Model.AllCourseRate Instructor Rating</p>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-award-fill"></i>
                            <p class="mb-0 p-1">@Model.AllRateCount Reviews</p>
                        </li>
                        <li class="d-flex align-items-center ">
                            <i class="bi bi-people-fill"></i>
                            <p class="mb-0 p-1">@Model.InstructorAllStudentsNumber Students</p>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-play-circle-fill"></i>
                            <p class="mb-0 p-1">@Model.InstructorAllCoursesNumber Course</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
    </section>






    <section class="container pt-5 pb-5">
        <div class="container">
        <div class="container" style="margin-left:60px;width:680px">
            <p class="fw-bold fs-4 ">More Courses by &nbsp <a href="#Instructor" style="text-decoration:none;color:#5124c3">@Model.Instructor</a> </p>
           <div class="d-flex">
            @foreach (var item in Model.InstructorAllCourses){
                <div class="card" style="width: 18rem;">
                    <img src="/img/angular-feature-image-1.png" height="150px" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text"> <h5>@item.CourseName</h5>
                        <p class="fs-6">@item.Title.Substring(0,50)</p>
                        <h6> $ @item.Price </h6>
                        </p>
                    </div>
                </div>
            }
                </div>
    </div>
        </div>
    </section>
