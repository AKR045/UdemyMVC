                    </div>
                    <ul class="course-features" style="font-size:13px; line-height:2">
                        <li class="d-flex align-items-center">
                            <i class="bi bi-star-fill"></i>
                            <p class="mb-0 p-1"> @Model.AllCourseRate Instructor Rating</p>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-award-fill"></i>
                            <p class="mb-0 p-1">@Model.AllRateCount Reviews</p>
                        </li>
                        <li class="d-flex align-items-center ">
                            <i class="bi bi-people-fill"></i>
                            <p class="mb-0 p-1">@Model.InstructorAllStudentsNumber Students</p>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-play-circle-fill"></i>
                            <p class="mb-0 p-1">@Model.InstructorAllCoursesNumber Course</p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
    </section>



