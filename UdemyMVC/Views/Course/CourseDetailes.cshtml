    <section id="Instructor">
    <div class="container">
        <div class="container mt-4">
            <div class="container row " style="margin-left:60px;width:680px">
                <p class="fw-bolder fs-4">Instructor</p>
                <a href="#" class="fs-5 fw-bold" style="color:#5022c3"> @Model.Instructor</a>
                <div class="d-flex">
                    <div class="p-2" style="padding-top:30px">
                        
                        <img src="/uploads/4d8007c7-6bfb-4e8c-8ef2-a5c1ed5e796c.jpeg" height="100px" width="100px" style="border-radius:50%" alt="Alternate Text" />
